{
    "version": "0.2.1",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch WebSocket example",
            "program": "${workspaceFolder}/examples/ws.ts",
            "preLaunchTask": "tsc: build - tsconfig.json",
            "outputCapture": "std",
            "env": {
              "NODE_ENV": "development",
              "LOG_LEVEL": "trace"
            },
            "skipFiles": [
                "<node_internals>/**"
            ],
            "outFiles": [
                "${workspaceFolder}/dist/**/*.js"
            ]
        }
    ]
}
